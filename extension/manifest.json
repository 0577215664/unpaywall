{
  "name": "Unpaywall",
  "version": "1.2.2",
  "version_name": "Unpaywall 1.2.2",
  "manifest_version": 2,
  "description": "Find open-access versions of paywalled research papers, instantly.",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },
  "browser_action": {
    "default_icon": "img/icon-16.png",
    "default_title": "Unpaywall preferences"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery-3.1.1.min.js",
        "js/alertify.min.js",
        "unpaywall.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
      "/img/",
      "unpaywall.html",
      "/css/",
      "/fonts/",
      "inside-frame.js"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}